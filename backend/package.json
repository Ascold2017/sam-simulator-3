{
  "name": "sam-simulator-backend",
  "version": "1.0.0",
  "main": "main.ts",
  "scripts": {
    "start": "ts-node app/main.ts",
    "dev": "ts-node-dev app/main.ts",
    "format": "prettier . --write",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d ./app/config/dataSource.ts",
    "migration:up": "npm run schema:sync && typeorm-ts-node-commonjs migration:run -d ./app/config/dataSource.ts",
    "migration:drop": "typeorm-ts-node-commonjs schema:drop -d ./app/config/dataSource.ts"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/socket.io": "^3.0.2",
    "bunyan": "^1.8.15",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.20",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.11"
  }
}
